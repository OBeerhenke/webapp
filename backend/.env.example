# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="file:./dev.db"

# Hyland IDP Configuration
HYLAND_IDP_URL=https://your-idp-url/idp/connect/token
HYLAND_CLIENT_ID=your-client-id
HYLAND_CLIENT_SECRET=your-client-secret
HYLAND_CONTENT_API_URL=https://your-content-api-url/api

# Mock Mode (set to 'true' for development without Hyland)
USE_MOCK_HYLAND=true
MOCK_PROCESSING_TIME_MS=120000

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
